<launch>

  <arg name="robot" default="0"/>

  <group if="$(eval arg('mode') == 0)">
    <machine name="turtlebot" address="localhost" env-loader="/home/student/install/env.sh"/>
  </group>


  <group if="$(eval arg('mode') == 1)">
    <machine name="turtlebot" address="turtlebotrobot" env-loader="/home/student/install/env.sh" user="student"  />
  </group>

  <node name="serial_node" pkg="rosserial_python" type="serial_node"/>

  <param name="port" value="/dev/ACM0"/>
  <param name="baud" value="115200"/>


</launch>
